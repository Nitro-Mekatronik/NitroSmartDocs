{
  "build": {
    "content": [
      {
        "files": [
          "**/*.md",
          "**/*.yml"
        ],
        "exclude": [
          "**/obj/**",
          "_site/**",
          "***/readme.md",
          "***/license.md",
          "***/crowdin_nopcommerce.yml"
        ],
        "src": "."
      }
    ],
    "resource": [
      {
        "files": [
          "**/*.png",
          "**/*.jpg",
          "**/*.jpeg",
          "**/*.gif",
          "**/*.svg",
          "**/*.pdf",
          "***/web.config"
        ],
        "exclude": [
          "**/obj/**",
          "_site/**",
          "_exported_templates/**"
        ],
        "src": "."
      }
    ],
    "postProcessors": [ "ExtractSearchIndex" ],
    "overwrite": [],
    "externalReference": [],
    "xrefService": [
      "https://xref.docs.microsoft.com/query?uid={uid}"
    ],
    "globalMetadata": {
      "_navPath": "/",
      "_navRel": "/",
      "improveTranslationEnabled": false,
      "_officialSiteUrl": "https://preprod.nitrosmart.app/",
      "_appLogoPath": "logo.png",
      "_enableSearch": true,
      "_gitContribute": {
        "orgName": "NitroSmart",
        "repoName": "NitroSmartDocs",
        "repo": "https://github.com/nopSolutions/NitroSmartDocs.git",
        "branch": "master"
      },
      "searchScope": [
        "NitroSmartDocs"
      ]
    },
    "template": [
      "default",
      "templates/nopcommerce"
    ],
    "dest": "_site",
    "markdownEngineName": "markdig"
  }
}